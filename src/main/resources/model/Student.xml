<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jiaoyang.dao.IStudentss">


    <select id="GetUserByID" parameterType="int" resultType="Student">
		select * from `student` where id = #{id}
    </select>

    <insert id="insertUser" parameterType="Employee">
		INSERT INTO employee(create_at,update_at,name,age,sex,job) VALUES (#{create_at}, #{update_at}, #{name},#{age}, #{sex},#{job} )
    </insert>

    <delete id="deleteUser" parameterType="int">
		DELETE FROM employee WHERE id = #{id}
    </delete>

    <update id="update" parameterType="Employee">    <!-- 怎么写两个参数  public void update(int id,String job); ！-->
		UPDATE employee SET
        create_at = #{create_at},
        update_at = #{update_at},
        name = #{name},
        age = #{age},
        sex = #{sex},
        job = #{job}


        WHERE id = #{id}
    </update>

    <select id="queryAll"  resultType="Employee">
		SELECT * FROM employee
    </select>

    <select id="query" parameterType="int" resultType="Employee">
		SELECT * FROM employee WHERE id = #{id}
    </select>
    <select id="deleteTable">
		DROP TABLE employee
    </select>

    <select id="createTable">

		CREATE TABLE employee  (
    ID BIGINT NOT NULL AUTO_INCREMENT,
    create_at BIGINT NOT NULL,
    update_at BIGINT NOT NULL,
    name VARCHAR(255) NOT NULL,
    age INT  NOT NULL,
    sex VARCHAR(255)  NOT NULL,
    job VARCHAR(255)  NOT NULL,
    PRIMARY KEY(ID)
    )
    </select>






</mapper>